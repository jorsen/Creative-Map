<script>
	var pins = document.querySelectorAll('.pins-group')
	for(let i = 0; i < pins.length; i++){
			pins[i].addEventListener('click', function(){
					for(let i = 0; i < pins.length; i++){
							 pins[i].classList.remove('active2')
					}
					this.classList.toggle('active2')
			})
	}
</script>
